<!DOCTYPE html>
<html>
  <head>
    <title>OdinFacebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if user_signed_in? %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete %>
        <div id='notifications'>
          <p>
          <%= button_to 'Notifications', {action: 'notifications', id: current_user.id, controller: 'users'} , method: :get %>:<%= @n1 %>
          </p>
        </div>
        <%= button_to "Users", users_path, method: :get%>
        <%= button_to "Feed", posts_path, method: :get %>
        <%= button_to current_user.name, current_user, method: :get %>
      <% else %>
        <%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
      <% end %>
      

    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
